<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <!-- icon css-->
    <link rel="stylesheet" href="assets/elagent-icon/style.css">
    <link rel="stylesheet" href="assets/animation/animate.css">
    <link rel="stylesheet" href="css/style-main.css">
    <link rel="stylesheet" href="css/style-login.css">
    <link rel="stylesheet" href="css/responsive.css">
    <title>CommunityChat -Local Forums</title>
</head>

<body data-scroll-animation="true">
    <div id="preloader">
        <div id="ctn-preloader" class="ctn-preloader">
            <div class="round_spinner">
                <div class="spinner"></div>
                <div class="text">
                    <img src="img/spinner_logo.png" alt="">
                    <h4><span>CommunityChat</span></h4>
                </div>
            </div>
            <h2 class="head">Fetching communities, one second!</h2>
            <p></p>
        </div>
    </div>
    <div class="body_wrapper">
        <section class="signup_area signup_area_height">
            <div class="row ms-0 me-0">
                <div class="sign_left signup_left">
                    <h2>Secure</h2>
                    <img class="position-absolute top" src="img/signup/top_ornamate.png" alt="top">
                    <img class="position-absolute bottom" src="img/signup/bottom_ornamate.png" alt="bottom">
                    <img class="position-absolute middle wow fadeInRight" src="img/signup/man_image.png" alt="bottom">
                    <div class="round wow zoomIn" data-wow-delay="0.2s"></div>
                </div>
                <div class="sign_right signup_right">
                    <div class="sign_inner signup_inner">
                        <div class="text-center">
                            <h3 id="overRideTheme">Create your CommunityChat Account</h3>
                            <p>Already have an account? <a href="/">Sign in</a></p>
                            <!-- <a href="#" class="btn-google"><img src="img/signup/gmail.png" alt=""><span
                                    class="btn-text">Sign up with Google</span></a> -->
                        </div>
                        <div class="divider">
                            <span class="or-text">or</span>
                        </div>
                        <form action="/register" method="post" class="row login_form">
                            <div class="col-sm-6 form-group">
                                <div class="small_text">Username*</div>
                                <input type="text" class="form-control" name="username" id="username" placeholder="Crabapple85" required minlength="3" maxlength="20">
                            </div>
                            <!-- <div class="col-lg-12 form-group">
                                <div class="small_text">Your email*</div>
                                <input type="email" class="form-control" name="email"id="email" placeholder="info@CC.com">
                            </div> -->
                            <div class="col-lg-12 form-group">
                                <div class="small_text">Password*</div>
                                <input id="signup-password" name="password" type="password" class="form-control"
                                    placeholder="Must be between 8-30 characters long" autocomplete="off" required minlength="8" maxlength="30">
                            </div>
                            <div class="col-lg-12 form-group">
                                <div class="small_text">Confirm password*</div>
                                <input id="confirm-password" name="confirm" type="password"
                                    class="form-control" placeholder="Must be between 8-30 characters long" autocomplete="off" required minlength="8" maxlength="30">
                            </div>
                            <div class="col-lg-12 form-group">
                                <div class="check_box">
                                    <input type="checkbox" value="None" id="squared2" name="check" required>
                                    <label class="l_text" for="squared2">I accept the <span>terms and conditions</span></label>
                                </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <button type="submit" class="btn action_btn thm_btn">Create my account</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="js/jquery-3.5.1.min.js"></script>
    <script src="js/pre-loader.js"> </script>
    <script src="assets/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="js/parallaxie.js"></script>
    <script src="assets/wow/wow.min.js"></script>
    <script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>
    <script src="js/main.js"></script>

</body>

</html>
                                    <div class="forum-post-top">
                                        <!-- <a class="author-avatar" href="#">
                                            <img src="img/forum/author-avatar.png" alt="author avatar">
                                        </a> -->
                                        <div class="forum-post-author">
                                            <% if(info[i].bIsAnonPost === true){ %>
                                                <a class="author-name userName" href="#">Anonymous</a>
                                            <% }else{ %>
                                                <a class="author-name userName" href="#"><%= info[i].user.username %></a>
                                            <% } %>
                                            <div class="forum-author-meta">
                                                <div class="author-badge">
                                                    <i class="icon_calendar"></i>
                                                    <a href="#"><%= info[i].date.toLocaleString() %></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="comment-content">
                                        <p><%= info[i].message %></p>
                                        <div class="action-button-container action-btns">
                                            <!-- <a href="#" class="action_btn btn-ans ask-btn reply-btn">Reply</a> -->
                                            <a href="#" class="action_btn btn-ans ask-btn too-btn dislikeButton" data-id="<%=info[i]._id %>">Dislike(s) <%= info[i].dislikes %></a>
                                            <a href="#" class="action_btn btn-ans ask-btn too-btn likeButton" data-id="<%=info[i]._id %>">Like(s) <%= info[i].likes %></a>
                                            <% if(info[i].user.username == user.username){ %>
                                            <a href="#" class="action_btn btn-ans ask-btn deleteButton" data-id="<%=info[i]._id %>">Delete</a>
                                            <% } %>
                                            <span class='fa fa-thumbs-up'></span>
                                            <span class='fa fa-trash'></span>
                                        </div>
                                    </div>
                                </div>

                            <% } %>
                            <% } else{ %>
                                <li>no messages</li>
                            <% } %>
                            <form action="/messages" method="POST" id="postMessage">
                                <input type="hidden"  name="threadId" value="<%= threadId %>">
                                <input type="hidden"  value="<%= JSON.stringify({username:user.username, userID: user._id}) %>" name="user">

                              <div class="mt-30">
                                <label class="label" for="inp_title">Post a Reply<span>:</span></label>
                                <div class="icon-input-group">
                                  <input class="form-control" type="text" id="inp_title" name="message" placeholder="reply..."/>
                                  <i class="icon_chat_alt"></i>
                                </div>
                              </div>
                              <div class="mt-25">
                                  <div class="form-check mt-30">
                                    <input class="form-check-input" type="checkbox" id="disabledFieldsetCheck" name="bIsAnonPost">
                                    <label class="form-check-label" for="disabledFieldsetCheck">
                                      <h5> Would you like to post this reply anonymously? Check here if yes.</h5>
                                    </label>
                                </div>
                                <button class="action_btn" type="submit">Submit</button>
                                  
                                  <div class="d-flex justify-content-end mt-60">
                                      
                                  <!-- <button class="cancel_btn">Cancel</button> -->
              
                                </div>
                              </div>
                            </form>

                            <div class="pagination-wrapper">
                                <div class="view-post-of">
                                    <!-- <p>Viewing 4 Comments - 1 through 10 (of 96 total)</p> -->
                                </div>
                                <!-- <ul class="post-pagination">

                                <h5 class="title">Topic: <%= thread.topic %></h5>
                                <% if(image){ %>
                                    <div class="container post-picture">
                                    <img class="threadImage" src="data:image/<%= image.image.contentType%>;base64,<%= image.image.data.toString('base64') %>"">
                                    </div>
                                    <% } %>
                                <p class="" >Content: <br><%= thread.content %></p>
                            </div>
                            <div class="action-button-container">
                                <a href="#postMessage" class="action_btn btn-ans ask-btn reply-btn">Reply</a>
                                <!-- <a href="#" class="action_btn btn-ans ask-btn too-btn">I have this question too (20)</a> -->
                            </div>
                            <div class="forum-post-btm">
